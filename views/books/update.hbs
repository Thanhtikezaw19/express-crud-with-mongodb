<div class="form">
  <h1>Update Book</h1>
  <form action="/books/{{book.id}}?_method=PUT" method="post">
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      required
      value="{{book.title}}"
    />
    <br />
    <label for="author">Author:</label>
    <input
      type="text"
      id="author"
      name="author"
      required
      value="{{{book.author}}}"
    />
    <br />
    <button type="submit" class="button">Update</button>
    <a href="/books">Back to Books</a>
  </form>
</div>